@model List<VideoShop.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if(!Model.Any())
{ 
    <p>There is no movies in database</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <td>Name</td>
        </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Name</td>
        </tr>
    }
        </tbody>
    </table>
}